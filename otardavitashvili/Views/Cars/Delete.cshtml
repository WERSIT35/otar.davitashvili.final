@model otardavitashvili.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<h4>Are you sure you want to delete this car?</h4>
<hr />

<div>
    <h5>Model: @Model.Model</h5>
    <h5>Release Year: @Model.ReleaseDate</h5>
    <h5>Speed: @Model.Speed km/h</h5>
    <h5>Owner: @(Model.Person?.PersonName) @(Model.Person?.PersonLastName)</h5>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CarId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Cars")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
